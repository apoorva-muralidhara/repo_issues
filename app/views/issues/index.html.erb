<h2>Issues:</h2>
<table>
  <tr>
    <th>Assignee Avatar</th>
    <th><%= link_to 'Title', request.params.merge(sortBy: 'title') %><th>
    <th>Created Time</th>
    <th><%= link_to 'Last Updated', request.params.merge(sortBy: 'updated_at') %></th>
  </tr>
  <% @issues.each do |issue| %>
    <tr>
      <td>
	<% if issue[:assignee] && (url = issue[:assignee][:avatar_url]) %>
	  <%= image_tag(url, size: '40x40') %>
	<% end %>
      </td>
      <td><%= issue[:title] %></td>
      <td><%= issue[:created_at].strftime("%d/%m/%Y") %></td>
      <td><%= time_ago_in_words(issue[:updated_at]) %> ago</td>
    </tr>
  <% end %>
</table>  
<%= link_to 'Repos', repos_path %><br>


