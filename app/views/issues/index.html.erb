<h2>Issues:</h2>
<table>
  <tr>
    <th>Assignee Avatar</th>
    <th>Title</th>
    <th>Created Time</th>
    <th>Last Updated</th>
  </tr>
  <% @issues.each do |issue| %>
    <tr>
      <td>
	<% if issue.dig(:assignee, :avatar_url) %>
	  <%= image_tag(issue.dig(:assignee, :avatar_url)) %>
	<% end %>
      </td>
      <td><%= issue[:title] %></td>
      <td><%= issue[:created_at].strftime("%d/%m/%Y") %></td>
      <td><%= time_ago_in_words(issue[:updated_at]) %> ago</td>
    </tr>
  <% end %>
</table>  
<%= link_to 'Repos', repos_path %><br>


